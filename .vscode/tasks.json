{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch Godot 4.5 Mono (Debug)",
            "type": "shell",
            "command": "${env:GODOT_EXE_PATH}",
            "args": [
                "--path",
                "${workspaceFolder}",
                "--editor",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "dotnet",
            "task": "watch",
            "file": "${workspaceFolder}/Grid Wars.csproj",
            "label": "dotnet: watch Grid Wars (local)"
        },
        {
            "type": "dotnet",
            "task": "watch",
            "file": "C:\\Users\\abeth\\OneDrive\\Documents\\grid-wars\\Grid Wars.csproj",
            "problemMatcher": [],
            "label": "dotnet: watch Grid Wars"
        }
    ]
    }